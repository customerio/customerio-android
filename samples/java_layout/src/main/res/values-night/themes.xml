<resources>
    <!-- Base application theme. -->
    <style name="Theme.SampleApp.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/java_blue_200</item>
        <item name="colorPrimaryVariant">@color/java_blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/java_orange_200</item>
        <item name="colorSecondaryVariant">@color/java_orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Theme colors -->
        <item name="colorOnSurface">@color/white</item>
        <!-- Common colors -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
