<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".ui.inline.SingleInlineFragment">

    <!-- Test information view -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#E3F2FD"
        android:padding="12dp"
        android:text="ðŸ“‹ Test Info: This tab contains 1 InlineInAppMessageView with elementId: 'single-tab-inline'"
        android:textColor="#1976D2"
        android:textSize="14sp" />

    <io.customer.messaginginapp.ui.InlineInAppMessageView
        android:id="@+id/inapp_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="0dp"
        app:elementId="single-tab-inline"
        tools:background="@android:color/holo_green_light"
        tools:layout_height="64dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_light" />

</LinearLayout>
